% A quick hack to make years show up at the start of bibliographic citations,
% (And not in the usual place.)
\renewbibmacro{author}{\begin{tabular}{>{\raggedleft\arraybackslash}p{0.07\textwidth}@{\hskip 0.02\textwidth}p{.93\textwidth}}\textbf{\printfield{year}}& \printnames{author}}
\renewbibmacro{date}{}

\renewbibmacro*{finentry}{.\\\end{tabular}}

% We also need to get rid of parenthesis around the (elided) year
% Cf. http://tex.stackexchange.com/questions/66161/biblatex-remove-parentheses-around-year-for-articles
\renewbibmacro*{issue+date}{%
  \setunit{\addcomma\space}% NEW
%  \printtext[parens]{% DELETED
    \iffieldundef{issue}
      {\usebibmacro{date}}
      {\printfield{issue}%
       \setunit*{\addspace}%
%       \usebibmacro{date}}}% DELETED
       \usebibmacro{date}}% NEW
  \newunit}

